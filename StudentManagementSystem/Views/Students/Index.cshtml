@model IEnumerable<StudentManagementSystem.Models.Student>

@{
    ViewData["Title"] = "Index";
}


<div class="row pt-2">
    <div class="col-6">
        <h1>List of All Students</h1>
    </div>
    <div class="col-6 text-end">
        <a asp-action="AddOrEdit" class="btn btn-primary">Add New Student</a>
    </div>
</div>
<br />

<div class="container border-dark mt-2">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Standard)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Standard)
                    </td>
                    <td>
                        <a asp-action="AddOrEdit" asp-route-id="@item.StdId">Edit</a> |
                        @*<a asp-action="Details" asp-route-id="@item.StdId">Details</a> |*@
                        <a asp-action="DetailsWithFeeTransactions" asp-route-id="@item.StdId">Details</a> |
                        <a onclick="return confirm('Do you want to delete this record?');" asp-action="Delete" asp-route-id="@item.StdId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


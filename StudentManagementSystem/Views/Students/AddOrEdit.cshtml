@model StudentManagementSystem.Models.Student

@{
    ViewData["Title"] = "AddOrEdit";
}

<div class="row pt-2">
    <div class="col-6">
        <h1>@((Model != null) ? "Edit Student Record" : "Add New Student")</h1>
    </div>
    <div class="col-6 text-end">
        <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
    </div>
</div>
<br />

<div class="container">
    <form asp-action="AddOrEdit">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <input type="hidden" asp-for="StdId" />

        <div class="form-group row">
            <label asp-for="Name" class="col-2 control-label text-end"></label>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Gender" class="col-2 control-label text-end"></label>
            <div class="col-6">
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Age" class="col-2 control-label text-end"></label>
            <div class="col-6">
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Standard" class="col-2 control-label text-end"></label>
            <div class="col-6">
                <input asp-for="Standard" class="form-control" />
                <span asp-validation-for="Standard" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group col-6 offset-2">
            <input type="submit" value=@((Model != null) ? "Update Changes" : "Add New Student") class="form-control btn btn-primary" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

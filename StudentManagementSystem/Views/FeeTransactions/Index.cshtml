@model IEnumerable<StudentManagementSystem.Models.FeeTransaction>

@{
    ViewData["Title"] = "Index";
}
<div class="row pt-2">
    <div class="col-6">
        <h1>List of All Fee Bills</h1>
    </div>
    <div class="col-6 text-end">
        <a asp-action="AddOrEdit" class="btn btn-primary">Add New Fee Bill</a>
    </div>
</div>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TutionFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviousArrears)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdmissionFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StationaryCharges)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeePayable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeePaid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextArrears)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.StdId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TutionFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PreviousArrears)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdmissionFee)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StationaryCharges)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeePayable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeePaid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextArrears)
                </td>
                <td>
                    <a asp-action="AddOrEdit" asp-route-id="@item.FeeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FeeId">Details</a> |
                    <a onclick="return confirm('Do you want to delete this fee bill?')" asp-action="Delete" asp-route-id="@item.FeeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model StudentManagementSystem.Models.FeeTransaction

@{
    ViewData["Title"] = "Details";
}

<div>
    <dl class="row">
        <dt class="col-sm-6 text-center text-capitalize">
            @((Model != null) ? "Fee Bill Details\n" : string.Empty)
        </dt>
        <dd class="col-sm-6"></dd>
        <dt class="col-sm-6 text-center">
            @Html.DisplayNameFor(model=>model.Student.Name) - 
            @Html.DisplayFor(model=>model.Student.Name) :
            @Html.DisplayNameFor(model=>model.Student.Standard) -
            @Html.DisplayFor(model=>model.Student.Standard) :
            @Html.DisplayNameFor(model=>model.Student.StdId) -
            @Html.DisplayFor(model=>model.Student.StdId)
        </dt>
        <dd class="col-sm-6"></dd>
    </dl>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TutionFee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TutionFee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PreviousArrears)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PreviousArrears)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdmissionFee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdmissionFee)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StationaryCharges)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StationaryCharges)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FeePayable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FeePayable)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FeePaid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FeePaid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NextArrears)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NextArrears)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Student.StdId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FeeId" class="btn btn-outline-primary">Edit Fee Bill</a> | 
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
